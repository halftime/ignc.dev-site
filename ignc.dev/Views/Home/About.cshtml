@{
    ViewData["Title"] = "About me";
}

<div class="centerbox">
    <h2>About me</h2>
    <i class="bi-person-workspace" style="font-size: 2rem;"></i>
</div>

<div class="split">

    <div class="left">
        <div class="formbox">
            <div class="form-group">
                <label for="name"><i class="bi-person"></i>Name</label>
                <input type="text" id="name" name="name" placeholder="Ignace">
            </div>
            <div class="form-group">
                <label for="link"><i class="bi-globe"></i>Website</label>
                <input type="text" id="link" name="link" placeholder="https://ignc.dev">
            </div>
            <div class="form-group">
                <label for="email"> <i class="bi-envelope-at"></i>Email</label>
                <input type="text" id="email" name="email" placeholder="ignc.dev@proton.me">
            </div>

            <div class="form-group">
                <label for="phone"><i class="bi-telephone"></i>Phone</label>
                <input type="text" id="phone" name="phone" placeholder="+32 *** ** ** **">
            </div>

            <div class="form-group">
                <label for="address"><i class="bi-pin-map"></i>Location</label>
                <input type="text" id="address" name="address" placeholder="Belgium (UTC+1)">
            </div>

            <div class="form-group">
                <label for="about"> <i class="bi-activity"></i>Status</label>
                <input type="text" id="work" name="work" placeholder="Available for (part-time) work">
            </div>
        </div>

    </div>

    <div class="right">
        <div class="skill-container">
            <ul>
                <li><b>Code</b></li>
